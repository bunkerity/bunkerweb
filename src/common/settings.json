{
  "IS_LOADING": {
    "context": "global",
    "default": "no",
    "help": "Internal use : set to yes when BW is loading.",
    "id": "internal-use-loading",
    "label": "internal use loading",
    "regex": "^(yes|no)$",
    "type": "check"
  },
  "NGINX_PREFIX": {
    "context": "global",
    "default": "/etc/nginx/",
    "help": "Where nginx will search for configurations.",
    "id": "nginx-prefix",
    "label": "nginx prefix",
    "regex": "^(\\/[\\-\\w.\\s]+)*\\/$",
    "type": "text"
  },
  "HTTP_PORT": {
    "context": "global",
    "default": "8080",
    "help": "HTTP port number which bunkerweb binds to.",
    "id": "http-port",
    "label": "HTTP port",
    "regex": "^\\d+$",
    "type": "number",
    "multiple": "listen-http-ports"
  },
  "HTTPS_PORT": {
    "context": "global",
    "default": "8443",
    "help": "HTTPS port number which bunkerweb binds to.",
    "id": "https-port",
    "label": "HTTPS port",
    "regex": "^\\d+$",
    "type": "number",
    "multiple": "listen-https-ports"
  },
  "MULTISITE": {
    "context": "global",
    "default": "no",
    "help": "Multi site activation.",
    "id": "multisite",
    "label": "Multisite",
    "regex": "^(yes|no)$",
    "type": "check"
  },
  "SERVER_NAME": {
    "context": "multisite",
    "default": "www.example.com",
    "help": "List of the virtual hosts served by bunkerweb. (separated by space)",
    "id": "server-name",
    "label": "Server name",
    "regex": "^(?!.*\\.\\.)(?:(\\b[^\\s+\\/:A-Z]{1,255}\\b)(?:\\s+\\b[^\\s+\\/:A-Z]{1,255}\\b)*)?$",
    "type": "text"
  },
  "WORKER_PROCESSES": {
    "context": "global",
    "default": "auto",
    "help": "Number of worker processes.",
    "id": "worker-processes",
    "label": "Worker processes",
    "regex": "^(auto|\\d+)$",
    "type": "text"
  },
  "WORKER_RLIMIT_NOFILE": {
    "context": "global",
    "default": "2048",
    "help": "Maximum number of open files for worker processes.",
    "id": "worker-rlimit-nofile",
    "label": "Open files per worker",
    "regex": "^\\d+$",
    "type": "number"
  },
  "WORKER_CONNECTIONS": {
    "context": "global",
    "default": "1024",
    "help": "Maximum number of connections per worker.",
    "id": "worker-connections",
    "label": "Connections per worker",
    "regex": "^\\d+$",
    "type": "number"
  },
  "LOG_FORMAT": {
    "context": "global",
    "default": "$host $remote_addr - $request_id $remote_user [$time_local] \"$request\" $status $body_bytes_sent \"$http_referer\" \"$http_user_agent\"",
    "help": "The format to use for access logs.",
    "id": "log-format",
    "label": "Access log format",
    "regex": "^.*$",
    "type": "text",
    "multiple": "access-logs"
  },
  "ACCESS_LOG": {
    "context": "global",
    "default": "/var/log/bunkerweb/access.log",
    "help": "Path to use for NGINX access logs (file path, syslog:server=host[:port][,param=value], or memory:name:size; set to off to disable).",
    "id": "access-log",
    "label": "Access log path",
    "regex": "^(off|syslog:[^\\s]+|memory:[^\\s]+|\\S+)$",
    "type": "text",
    "multiple": "access-logs"
  },
  "ERROR_LOG": {
    "context": "global",
    "default": "/var/log/bunkerweb/error.log",
    "help": "Path to use for NGINX error logs (file path, stderr, syslog:server=host[:port][,param=value], or memory:size).",
    "id": "error-log",
    "label": "Error log path",
    "regex": "^(stderr|syslog:[^\\s]+|memory:[^\\s]+|\\S+)$",
    "type": "text",
    "multiple": "error-logs"
  },
  "LOG_LEVEL": {
    "context": "global",
    "default": "notice",
    "help": "The level to use for error logs.",
    "id": "log-level",
    "label": "Log level",
    "regex": "^(debug|info|notice|warn|error|crit|alert|emerg)$",
    "type": "select",
    "select": [
      "debug",
      "info",
      "notice",
      "warn",
      "error",
      "crit",
      "alert",
      "emerg"
    ],
    "multiple": "error-logs"
  },
  "DNS_RESOLVERS": {
    "context": "global",
    "default": "127.0.0.11",
    "help": "DNS addresses of resolvers to use.",
    "id": "dns-resolvers",
    "label": "DNS resolvers",
    "regex": "^(?! )(( *[^ ]+)(?!.*\\2))*$",
    "type": "multivalue",
    "separator": " "
  },
  "WORKERLOCK_MEMORY_SIZE": {
    "context": "global",
    "default": "48k",
    "help": "Size of lua_shared_dict for initialization workers",
    "id": "workerlock-memory-size",
    "label": "Initialization Workerlock memory size",
    "regex": "^\\d+[kKmMgG]?$",
    "type": "text"
  },
  "INTERNALSTORE_MEMORY_SIZE": {
    "context": "global",
    "default": "64m",
    "help": "Size of the internal internalstore.",
    "id": "internalstore-memory-size",
    "label": "Internalstore memory size",
    "regex": "^\\d+[kKmMgG]?$",
    "type": "text"
  },
  "DATASTORE_MEMORY_SIZE": {
    "context": "global",
    "default": "64m",
    "help": "Size of the internal datastore.",
    "id": "datastore-memory-size",
    "label": "Datastore memory size",
    "regex": "^\\d+[kKmMgG]?$",
    "type": "text"
  },
  "CACHESTORE_MEMORY_SIZE": {
    "context": "global",
    "default": "64m",
    "help": "Size of the internal cachestore.",
    "id": "cachestore-memory-size",
    "label": "Cachestore memory size",
    "regex": "^\\d+[kKmMgG]?$",
    "type": "text"
  },
  "CACHESTORE_IPC_MEMORY_SIZE": {
    "context": "global",
    "default": "16m",
    "help": "Size of the internal cachestore (ipc).",
    "id": "cachestore-ipc-memory-size",
    "label": "Cachestore ipc memory size",
    "regex": "^\\d+[kKmMgG]?$",
    "type": "text"
  },
  "CACHESTORE_MISS_MEMORY_SIZE": {
    "context": "global",
    "default": "16m",
    "help": "Size of the internal cachestore (miss).",
    "id": "cachestore-miss-memory-size",
    "label": "Cachestore miss memory size",
    "regex": "^\\d+[kKmMgG]?$",
    "type": "text"
  },
  "CACHESTORE_LOCKS_MEMORY_SIZE": {
    "context": "global",
    "default": "16m",
    "help": "Size of the internal cachestore (locks).",
    "id": "cachestore-locks-memory-size",
    "label": "Cachestore locks memory size",
    "regex": "^\\d+[kKmMgG]?$",
    "type": "text"
  },
  "USE_API": {
    "context": "global",
    "default": "yes",
    "help": "Activate BunkerWeb internal API.",
    "id": "use-api",
    "label": "Activate API",
    "regex": "^(yes|no)$",
    "type": "check"
  },
  "API_HTTP_PORT": {
    "context": "global",
    "default": "5000",
    "help": "Listen port number for BunkerWeb internal API.",
    "id": "api-http-listen",
    "label": "API port number",
    "regex": "^\\d+$",
    "type": "number"
  },
  "API_HTTPS_PORT": {
    "context": "global",
    "default": "5443",
    "help": "Listen port number (TLS) for BunkerWeb internal API.",
    "id": "api-https-listen",
    "label": "API HTTPS port number",
    "regex": "^\\d+$",
    "type": "number"
  },
  "API_LISTEN_IP": {
    "context": "global",
    "default": "0.0.0.0",
    "help": "Listen IP address for BunkerWeb internal API.",
    "id": "api-ip-listen",
    "label": "API listen IP",
    "regex": "^.*$",
    "type": "text"
  },
  "API_LISTEN_HTTP": {
    "context": "global",
    "default": "yes",
    "help": "Listen HTTP for BunkerWeb internal API.",
    "id": "api-listen-http",
    "label": "API listen HTTP",
    "regex": "^(yes|no)$",
    "type": "check"
  },
  "API_LISTEN_HTTPS": {
    "context": "global",
    "default": "no",
    "help": "Listen HTTPS (SSL/TLS) for BunkerWeb internal API.",
    "id": "api-listen-https",
    "label": "API listen HTTPS",
    "regex": "^(yes|no)$",
    "type": "check"
  },
  "API_SERVER_NAME": {
    "context": "global",
    "default": "bwapi",
    "help": "Server name (virtual host) for BunkerWeb internal API.",
    "id": "api-server-name",
    "label": "API server name",
    "regex": "^[^ ]{1,255}$",
    "type": "text"
  },
  "API_TOKEN": {
    "context": "global",
    "default": "",
    "help": "Optional token to authenticate API calls. If set, the scheduler (and any client) must send it via the Authorization header. Note: must be set on both BunkerWeb and the scheduler environments.",
    "id": "api-token",
    "label": "API access token",
    "regex": ".*",
    "type": "text"
  },
  "API_WHITELIST_IP": {
    "context": "global",
    "default": "127.0.0.0/8",
    "help": "List of IP/network allowed to contact BunkerWeb internal API. (format: ip/netmask or ipv6/netmask, separated by space)",
    "id": "api-whitelist-ip",
    "label": "API whitelist IP",
    "regex": "^(?! )( *(((\\b25[0-5]|\\b2[0-4]\\d|\\b[01]?\\d\\d?)(\\.(25[0-5]|2[0-4]\\d|[01]?\\d\\d?)){3})(\\/([1-2][0-9]?|3[0-2]?|[04-9]))?|(([0-9a-fA-F]{1,4}:){7}[0-9a-fA-F]{1,4}|([0-9a-fA-F]{1,4}:){1,7}:|([0-9a-fA-F]{1,4}:){1,6}:[0-9a-fA-F]{1,4}|([0-9a-fA-F]{1,4}:){1,5}(:[0-9a-fA-F]{1,4}){1,2}|([0-9a-fA-F]{1,4}:){1,4}(:[0-9a-fA-F]{1,4}){1,3}|([0-9a-fA-F]{1,4}:){1,3}(:[0-9a-fA-F]{1,4}){1,4}|([0-9a-fA-F]{1,4}:){1,2}(:[0-9a-fA-F]{1,4}){1,5}|[0-9a-fA-F]{1,4}:((:[0-9a-fA-F]{1,4}){1,6})|:((:[0-9a-fA-F]{1,4}){1,7}|:)|fe80:(:[0-9a-fA-F]Z{0,4}){0,4}%[0-9a-zA-Z]+|::(ffff(:0{1,4})?:)?((25[0-5]|(2[0-4]|1?\\d)?\\d)\\.){3}(25[0-5]|(2[0-4]|1?\\d)?\\d)|([0-9a-fA-F]{1,4}:){1,4}:((25[0-5]|(2[0-4]|1?\\d)?\\d)\\.){3}(25[0-5]|(2[0-4]|1?\\d)?\\d))(\\/(12[0-8]|1[01][0-9]|[0-9][0-9]?))?)(?!.*\\D\\2([^\\d\\/]|$)) *)*$",
    "type": "multivalue",
    "separator": " "
  },
  "AUTOCONF_MODE": {
    "context": "global",
    "default": "no",
    "help": "Enable Autoconf Docker integration.",
    "id": "autoconf-mode",
    "label": "Autoconf mode",
    "regex": "^(yes|no)$",
    "type": "check"
  },
  "SWARM_MODE": {
    "context": "global",
    "default": "no",
    "help": "Enable Docker Swarm integration.",
    "id": "swarm-mode",
    "label": "Swarm mode",
    "regex": "^(yes|no)$",
    "type": "check"
  },
  "KUBERNETES_MODE": {
    "context": "global",
    "default": "no",
    "help": "Enable Kubernetes integration.",
    "id": "kubernetes-mode",
    "label": "Kubernetes mode",
    "regex": "^(yes|no)$",
    "type": "check"
  },
  "SERVER_TYPE": {
    "context": "multisite",
    "default": "http",
    "help": "Server type : http or stream.",
    "id": "server-type",
    "label": "Server type",
    "regex": "^(http|stream)$",
    "type": "select",
    "select": ["http", "stream"]
  },
  "LISTEN_STREAM": {
    "context": "multisite",
    "default": "yes",
    "help": "Enable listening for non-ssl (passthrough).",
    "id": "listen-stream",
    "label": "Listen stream",
    "regex": "^(yes|no)$",
    "type": "check"
  },
  "LISTEN_STREAM_PORT": {
    "context": "multisite",
    "default": "1337",
    "help": "Listening port for non-ssl (passthrough).",
    "id": "listen-stream-port",
    "label": "Listen stream port",
    "regex": "^[0-9]+$",
    "type": "text",
    "multiple": "listen-stream-ports"
  },
  "LISTEN_STREAM_PORT_SSL": {
    "context": "multisite",
    "default": "4242",
    "help": "Listening port for ssl (passthrough).",
    "id": "listen-stream-port-ssl",
    "label": "Listen stream port ssl",
    "regex": "^[0-9]+$",
    "type": "text",
    "multiple": "listen-stream-ports-ssl"
  },
  "USE_TCP": {
    "context": "multisite",
    "default": "yes",
    "help": "TCP listen (stream).",
    "id": "use-tcp",
    "label": "Listen TCP",
    "regex": "^(yes|no)$",
    "type": "check"
  },
  "USE_UDP": {
    "context": "multisite",
    "default": "no",
    "help": "UDP listen (stream).",
    "id": "use-udp",
    "label": "Listen UDP",
    "regex": "^(yes|no)$",
    "type": "check"
  },
  "USE_IPV6": {
    "context": "global",
    "default": "no",
    "help": "Enable IPv6 connectivity.",
    "id": "use-ipv6",
    "label": "Use IPv6",
    "regex": "^(yes|no)$",
    "type": "check"
  },
  "IS_DRAFT": {
    "context": "multisite",
    "default": "no",
    "help": "Internal use : set to yes when the service is in draft mode.",
    "id": "internal-use-draft",
    "label": "internal use draft",
    "regex": "^(yes|no)$",
    "type": "check"
  },
  "TIMERS_LOG_LEVEL": {
    "context": "global",
    "default": "debug",
    "help": "Log level for timers.",
    "id": "timers-log-level",
    "label": "Timers log level",
    "regex": "^(debug|info|notice|warn|err|crit|alert|emerg)$",
    "type": "select",
    "select": [
      "debug",
      "info",
      "notice",
      "warn",
      "err",
      "crit",
      "alert",
      "emerg"
    ]
  },
  "BUNKERWEB_INSTANCES": {
    "context": "global",
    "default": "127.0.0.1",
    "help": "List of BunkerWeb instances separated with spaces (format : fqdn-or-ip:5000 http://fqdn-or-ip:5000)",
    "id": "bunkerweb-instances",
    "label": "BunkerWeb instances",
    "regex": "^.*$",
    "type": "multivalue",
    "separator": " "
  },
  "USE_TEMPLATE": {
    "context": "multisite",
    "default": "",
    "help": "Config template to use that will override the default values of specific settings.",
    "id": "use-template",
    "label": "Use template",
    "regex": "^.*$",
    "type": "text"
  },
  "SECURITY_MODE": {
    "context": "multisite",
    "default": "block",
    "help": "Defines the response to threats: \"detect\" to monitor and log, or \"block\" to prevent access and log incidents.",
    "id": "security-mode",
    "label": "Security mode",
    "regex": "^(detect|block)$",
    "type": "select",
    "select": ["detect", "block"]
  },
  "SERVER_NAMES_HASH_BUCKET_SIZE": {
    "context": "global",
    "default": "",
    "help": "Value for the server_names_hash_bucket_size directive.",
    "id": "server-names-hash-bucket-size",
    "label": "Server names hash bucket size",
    "regex": "^.*$",
    "type": "text"
  }
}
