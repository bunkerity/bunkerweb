{
  "id": "dnsbl",
  "name": "DNSBL",
  "description": "Deny access based on external DNSBL servers.",
  "version": "1.0",
  "stream": "yes",
  "settings": {
    "USE_DNSBL": {
      "context": "multisite",
      "default": "yes",
      "help": "Activate DNSBL feature.",
      "id": "use-dnsbl",
      "label": "Activate DNSBL",
      "regex": "^(yes|no)$",
      "type": "check"
    },
    "DNSBL_LIST": {
      "context": "global",
      "default": "bl.blocklist.de sbl.spamhaus.org xbl.spamhaus.org",
      "help": "List of DNSBL servers.",
      "id": "dnsbl-list",
      "label": "DNSBL list",
      "regex": "^.*$",
      "type": "multivalue",
      "separator": " "
    },
    "DNSBL_IGNORE_IP": {
      "context": "multisite",
      "default": "",
      "help": "List of IP/network, separated with spaces, to ignore for DNSBL checks.",
      "id": "dnsbl-ignore-ip",
      "label": "DNSBL ignore IP/network",
      "regex": "^( *(((\\b25[0-5]|\\b2[0-4]\\d|\\b[01]?\\d\\d?)(\\.(25[0-5]|2[0-4]\\d|[01]?\\d\\d?)){3})(\\/([1-2][0-9]?|3[0-2]?|[04-9]))?|(([0-9a-fA-F]{1,4}:){7}[0-9a-fA-F]{1,4}|([0-9a-fA-F]{1,4}:){1,7}:|([0-9a-fA-F]{1,4}:){1,6}:[0-9a-fA-F]{1,4}|([0-9a-fA-F]{1,4}:){1,5}(:[0-9a-fA-F]{1,4}){1,2}|([0-9a-fA-F]{1,4}:){1,4}(:[0-9a-fA-F]{1,4}){1,3}|([0-9a-fA-F]{1,4}:){1,3}(:[0-9a-fA-F]{1,4}){1,4}|([0-9a-fA-F]{1,4}:){1,2}(:[0-9a-fA-F]{1,4}){1,5}|[0-9a-fA-F]{1,4}:((:[0-9a-fA-F]{1,4}){1,6})|:((:[0-9a-fA-F]{1,4}){1,7}|:)|fe80:(:[0-9a-fA-F]Z{0,4}){0,4}%[0-9a-zA-Z]+|::(ffff(:0{1,4})?:)?((25[0-5]|(2[0-4]|1?\\d)?\\d)\\.){3}(25[0-5]|(2[0-4]|1?\\d)?\\d)|([0-9a-fA-F]{1,4}:){1,4}:((25[0-5]|(2[0-4]|1?\\d)?\\d)\\.){3}(25[0-5]|(2[0-4]|1?\\d)?\\d))(\\/(12[0-8]|1[01][0-9]|[0-9][0-9]?))?) *)*$",
      "type": "multivalue",
      "separator": " "
    },
    "DNSBL_IGNORE_IP_URLS": {
      "context": "multisite",
      "default": "",
      "help": "List of URLs, separated with spaces, containing IP/network to ignore for DNSBL checks. Also supports file:// URLs and auth basic using http://user:pass@url scheme.",
      "id": "dnsbl-ignore-ip-urls",
      "label": "DNSBL ignore IP/network URLs",
      "regex": "^( *((https?:\\/\\/|file:\\/\\/\\/)[\\-\\w@:%.+~#=]+[\\-\\w\\(\\)!@:%+.~#?&\\/=$]*) *)*$",
      "type": "multivalue",
      "separator": " "
    }
  },
  "jobs": [
    {
      "name": "dnsbl-download",
      "file": "dnsbl-download.py",
      "every": "hour",
      "reload": true,
      "async": true
    }
  ]
}
