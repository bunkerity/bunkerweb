/var/log/bunkerweb/*.log
{
    su root nginx
    daily
    size 100M
    rotate 7
    copytruncate
    compress
    delaycompress
    missingok
    notifempty
    dateext
    dateformat -%Y-%m-%d
    create 0640 root nginx
}

/var/log/bunkerweb/letsencrypt/*.log \
/var/log/bunkerweb/letsencrypt/*.log.[0-9]+ {
    su root nginx
    daily
    rotate 0
    maxage 7
    missingok
    compress
    delaycompress
    create 0640 root nginx
}
